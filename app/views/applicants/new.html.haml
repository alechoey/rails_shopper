.container
  #apply.modal.fade
    .modal-dialog{:role => 'document'}
      .modal-content
        .modal-header
          %button.close{'data-dismiss' => 'modal', 'aria-hidden' => true}
            &times
          %h3 Apply to be a shopper
        = form_for @applicant do |f|
          .modal-body
            = render :partial => 'form_fields', :locals => { :f => f }
          .modal-footer
            = f.submit 'Get started!', :class => 'btn btn-success'

  - if flash[:error]
    .alert.alert-error
      %p There were errors with your submission please try again
      %ul
        - flash[:error].each do |error|
          %li= error
  %p Blah blah blah blah be a shopper

  = link_to 'Apply now', '#apply', 'data-toggle' => 'modal', :class => 'btn btn-success'
